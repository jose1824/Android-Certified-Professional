<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.josejesus.acpmoodulo1.SegundaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/segunda_txt_implicitos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intents Explicitos"/>
        
        <Button
            android:id="@+id/segunda_btn_activitdad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ir a otra actividad"/>

        <Button
            android:id="@+id/segunda_btn_activitdadE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ir a otra actividad y enviar datos"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/segunda_txt_explicitos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intents Explicitos"/>

        <Button
            android:id="@+id/segunda_btn_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Abrir pagina web"/>

        <Button
            android:id="@+id/segunda_btn_llamada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Realizar una llamada."/>

    </LinearLayout>

</LinearLayout>

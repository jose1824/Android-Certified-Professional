<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.josejesus.acppersistenciaalmacenamiento.AlmacenamientoInternoExternoActivity">

    <TextView
        android:id="@+id/alm_txt_interna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Almacenamiento en memoria interna"/>

    <EditText
        android:id="@+id/alm_et_archivoUno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alm_txt_interna"/>

    <Button
        android:id="@+id/alm_btn_guardarInterno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/alm_et_archivoUno"
        android:text="Guardar"/>

    <Button
        android:id="@+id/alm_btn_recuperarInterno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/alm_et_archivoUno"
        android:layout_alignRight="@id/alm_et_archivoUno"
        android:layout_below="@id/alm_et_archivoUno"
        android:text="Leer archivos"/>

    <TextView
        android:id="@+id/alm_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/alm_btn_recuperarInterno"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Almacenamiento memoria externa"/>

    <EditText
        android:id="@+id/alm_et_archivoDos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/alm_txt"/>

    <Button
        android:id="@+id/alm_btn_guardarExterno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/alm_et_archivoDos"
        android:text="Guardar"/>

    <Button
        android:id="@+id/alm_btn_recuperarExterno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/alm_et_archivoDos"
        android:layout_alignRight="@id/alm_et_archivoDos"
        android:layout_below="@id/alm_et_archivoDos"
        android:text="Leer archivos"/>

</RelativeLayout>

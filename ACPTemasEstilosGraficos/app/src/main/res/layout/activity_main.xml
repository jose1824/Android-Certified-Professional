<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textoImagenNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margen_elemento_layout"
        android:text="@string/texto_imagen_normal"/>

    <ImageButton
        android:id="@+id/botonImagenNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/normal_button"
        android:layout_below="@+id/textoImagenNormal"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"/>

    <TextView
        android:id="@+id/textoImagenDrawPatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/texto_imagen_drawpatch"
        android:layout_margin="@dimen/margen_elemento_layout"
        android:layout_below="@+id/botonImagenNormal"/>

    <ImageButton
        android:id="@+id/botonImagenDrawPatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:layout_below="@+id/textoImagenDrawPatch"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"/>

    <TextView
        android:id="@+id/textoConEstilo"
        android:text="@string/texto_estilo"
        android:layout_below="@+id/botonImagenDrawPatch"
        style="@style/Style_TextView"/>

</RelativeLayout>
